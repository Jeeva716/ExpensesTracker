<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/23.2.4/material.css" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/23.2.4/bootstrap5.css" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/23.2.4/fluent.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wight@300,400,700&display=swap" />
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" /> *@

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpensesApp.styles.css" asp-append-version="true" />
    <script src="https://cdn.syncfusion.com/ej2/23.2.4/dist/ej2.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.bundle.min.js"></script> *@

</head>


<body >
  
    <header>
        <nav class="navbar navbar-default sticky-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container"> 
                <a class="navbar-brand text-align-center" asp-area=""  asp-action="Index">ExpenseTracker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
        
    </header>
    <div class="main-content">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="@(ViewData["isDashboard"] == null ?"col-md-10":"col-md-12")">
                <main role="main" class="pb-3">
                        @if (ViewData["isDashboard"] == null)
                        {
                            @* <div class="col-md-7">
                                <div class="d-flex flex-column mb-5"> *@
                                    <div class="row">

                                        <div class="d-flex-grow-1">
                                            <h3 class="fw-bold">@ViewData["PageTitle"]</h3>
                                        </div>
                                        <div class=" btn1">
                                            @if (ViewData["PageActionText"] != null)
                                            {

                                                <a class="btn btn-warning" href="@ViewData["PageActionUrl"]">
                                                    <b> @ViewData["PageActionText"]</b>
                                                </a>

                                            }
                                        </div>
                                    
                                 
                                 <ejs-breadcrumb id="breadcrumb"
                                  separatorTemplate="@Html.Raw("<span class='fa-solid fa-angle-right'>></span>")"></ejs-breadcrumb>
                            
                    </div>  }
     
                    @RenderBody()
                </main>
            </div>
        </div>
       
    </div>
    </div>
    
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <ejs-scripts>
    </ejs-scripts>
</body>
</html>
